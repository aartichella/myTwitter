<!DOCTYPE HTML>
<html ng-app="twitter">
  <head>
    <title>Followers|Following</title>
    <meta charset="UTF-8">
	<%- include shared/commonfiles.ejs %>
  </head>
  <body  ng-controller="twitterfeed">
<%- include shared/header.ejs %>
<div class="tweetfeed_parent" ng-controller="followingCtrl">
<div class="row" >
	
  <div class="col-md-3">
    <div class="thumbnail">
      <img src="http://lorempixel.com/400/200/people/" alt="100%x200" style="height: 200px; width: 100%; display: block;">
      <div class="caption">
        <h3>{{username}}</h3>
        <p>Profile</p>
        <p>
        <a href="/home">Tweets</a>
        <a href="/followers">Follower</a>
        <a href="/following">Following</a>
        </p>
      </div>
    </div>
  </div>
<div class="col-md-9">
	<div class="col-md-3" ng-repeat="follow in followingList" ng-show="pathname == 'following'">
		 <div class="thumbnail">
		 	<div class="caption">
		 		<h3>{{follow.followingTwitterHandle}}</h3>
		 		<h5>{{follow.timestamp | date:'short'}}</h5>
		 	</div>
		 </div>
		
	</div>
	
	<div class="col-md-3" ng-repeat="follow in followersList" ng-show="pathname == 'followers'">
		 <div class="thumbnail">
		 	<div class="caption">
		 		<h3>{{follow.followerTwitterHandle}}</h3>
		 		<h5>{{follow.timestamp | date:'short'}}</h5>
		 	</div>
		 </div>
		
	</div>
</div>
  
</div>
</div>
<script src="../../controller/twitter_feedCtrl.js"></script>
<script src="../../controller/followerCtrl.js"></script>
</body>
</html>